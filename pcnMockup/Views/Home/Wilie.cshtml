@{
    ViewBag.Title = "PNC Control Application";
}

<script>
    $("#datetime").datetimepicker({
        // minDate: new Date()
        minDate: 0
    });
</script>

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<h3 style="color:green">Status: Sending Active</h3>
<h3 style="color:red">Status: Sending In-Active</h3>

<p>If Status Active - Actively making calls</p>
<p>
    Enter Restart Date &amp; Time <input id="datetime" />
</p>
<hr />
<hr />
<p>If Status In-Active - paused calls</p>
<p>
    <input type="button" value="Restart IVR Calls" />
</p>


